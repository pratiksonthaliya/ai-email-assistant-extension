{
    "name": "Email Reply Assitant",
    "description": "AI-powered email reply generator",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://mail.google.com/*"
    ],
    "content_scripts": [
        {
        "js": ["content.js"],
        "css": ["content.css"],
        "matches": ["*://mail.google.com/*"],
        "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
        "resources": [ "icons/*" ],
        "matches": ["*://mail.google.com/*"]
        }
    ],
    "action": {
      "default_title": "Email Writer Assitant",
      "default_icon": "icons/icon.png"
    }
}